{% load dict-filters %}{% spaceless %}<graph caption='PVT Convergence' xAxisName='Time' yAxisName='Percent Votes' lineThickness='2'
  showValues='0' decimalPrecision='1' forceDecimals='1' numDivLines='4' yAxisMaxValue='100' yAxisMinValue="-5" showLabels='0'>
  <categories>{% for point in datapoints %}
    <category name='{{ point }}' showName="0" />{% endfor %}
  </categories>
{% for party in parties %}
  <dataset seriesName='{{ party }}' color='{{ colors|index_value:forloop.counter0 }}'>{% with party_data|key_value:party as datapoints %}{% for x in datapoints %}
    <set value='{{ x }}' />{% endfor %}{% endwith %}
  </dataset>{% endfor %}
  <trendlines>
    <line startValue='50' color='FF0000' displayValue='50%' showOnTop='1' lineThickness='2' />
  </trendlines>
</graph>
{% endspaceless %}